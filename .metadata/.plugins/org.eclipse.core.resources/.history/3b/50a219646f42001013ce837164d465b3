#include<stdint.h>
#include "uart0.h"
#include "adc0-1.h"
int main(void)
{
UART0_Init();
ADC0_Init();
ADC1_Init();
ADC0_StartConv();
ADC1_StartConv();
uint32_t x;
uint32_t y;
int i;
int j;
while(1)
{
    ADC0_StartConv();
    ADC1_StartConv();
    x=ADC0_Read();
    y=ADC1_Read();
    UART0_SendString("passenger seat temperature:- ");
    UART0_SendNumber(x);
    UART0_SendString(" \r\n\n**************************************\r\n\n");
    UART0_SendString("driver seat temperature:- ");
    UART0_SendNumber(y);
    UART0_SendString(" \r\n\n**************************************\r\n\n");
    for(i=0;i<10000;i++){
        for(j=0;j<100;j++)
        {

        }
    }
}
}
